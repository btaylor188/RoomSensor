substitutions:
  device_name: "room_sensor"

esphome:
  name: ${device_name}
  platform: esp32
  board: esp32-s3-devkitc-1

wifi:
  ssid: !secret wifi_ssid
  password: !secret wifi_password

# Enable logging
logger:

# Enable Home Assistant API
api:
  password: !secret api_password

ota:
  platform: esphome
  password: !secret ota_password

# I2C Bus setup (for AM2320 and BH1750 sensors)
i2c:
  sda: GPIO8
  scl: GPIO10
  scan: true
  id: bus_a
  
#mmWave Sensor
ld2410:
  id: ld2410_radar
  
uart:
  tx_pin: GPIO16
  rx_pin: GPIO17
  baud_rate: 256000
  parity: NONE
  stop_bits: 1

number:
