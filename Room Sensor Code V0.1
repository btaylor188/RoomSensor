#AM2320 Temp and Humidity
  - platform: am2320
    temperature:
      name: "${device_name} Room Temperature"
    humidity:
      name: "${device_name} Room Humidity"
    update_interval: 60s

# BH1750 Light Sensor
  - platform: bh1750
    name: "${device_name} Room Light Level"
    address: 0x23
    update_interval: 30s

# IR Transmitter (IR Blaster)
remote_transmitter:
  pin: GPIO4
  carrier_duty_percent: 50%

switch:
  - platform: template
    name: "${device_name} Send IR Command"
    turn_on_action:
      remote_transmitter.transmit_raw:
        code: [9100, -4500, 560, -1600, 560, -1600, 560, -1600, 560, -1600, 560, -1600, 560]
        repeat:
          times: 3
          wait_time: 30ms
